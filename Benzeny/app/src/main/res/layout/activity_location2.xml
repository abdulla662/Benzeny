<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111"
    tools:context=".Location2">


    <EditText
        android:id="@+id/From1"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/plaintextfigure"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="enter your location in details"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/to"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/plaintextfigure"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="enter your location in details"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/From1" />

    <Button
        android:id="@+id/gotolocation"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF001F"
        android:onClick="show"
        android:text="calculate"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/From1"
        app:layout_constraintVertical_bias="0.492" />

</androidx.constraintlayout.widget.ConstraintLayout>