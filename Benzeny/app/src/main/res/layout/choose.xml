<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111"
    tools:context=".ChooseActivity">

    <Spinner
        android:id="@+id/benzenetype"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/plaintextfigure"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Benzene Type"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carcon" />

    <Spinner
        android:id="@+id/carcon"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/plaintextfigure"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Benzene Type"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/CC"
        android:layout_width="271dp"
        android:layout_height="33dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/plaintextfigure"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter CC Number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/benzenetype" />

    <TextView
        android:id="@+id/From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="CC"
        android:textColor="#66727F"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/CC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview2221"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Benzene"
        android:textColor="#66727F"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/benzenetype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview22213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Car conditon"
        android:textColor="#66727F"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/carcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gotolocation"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginBottom="105dp"
        android:backgroundTint="#FF001F"
        android:onClick="locations"
        android:text="enter locations"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calc"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FF001F"
        android:onClick="locations"
        android:text="consumption "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/benzenetype"
        app:layout_constraintEnd_toEndOf="@+id/benzenetype"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="@+id/benzenetype"
        app:layout_constraintTop_toTopOf="@+id/benzenetype"
        />

</androidx.constraintlayout.widget.ConstraintLayout>